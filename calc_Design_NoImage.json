{
  "$jason": {
    "head": {
      "title": "Calculator APP4WEB",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        },
        "padded": {
          "padding": "10"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        }
      }
    },
    "body": {
      "header": {
        "title": "CALCULATION APP4WEB",
        "style": {
          "background": "#0000CD",
          "color": "#ffffff",
          "font": "AvenirNext-Bold",
          "size": "14"
        }
      },
      "sections": [
        {
          "header": {
            "type": "vertical",
            "style": {
              "background": "#ebebeb"
            },
            "components": [{
              "type": "label",
              "class": "bold",
              "text": "Design"
            }, {
              "type": "label",
              "class": "normal",
              "text": "What would your UI theme be?"
            }]
          },
          "items": [
            {
              "type": "label",
              "text": "Stock or Template UI",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-операционная-система-android-24.png"
            },
            {
              "type": "label",
              "text": "Custom Branded UI",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-ос-mac-24.png"
            },
            {
              "type": "label",
              "text": "Animated UI",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-windows-8-24.png"
            },
            {
              "type": "label",
              "text": "Game Animations",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-шаблон-24.png"
            }
          ]
        },

        {
          "header": {
            "type": "vertical",
            "style": {
              "background": "#ebebeb"
            },
            "components": [{
              "type": "label",
              "class": "bold",
              "text": "Screens"
            }, {
              "type": "label",
              "class": "normal",
              "text": "How many approximate number of screens will your app have?"
            }]
          },
          "items": [{
            "type": "label",
            "text": "Other",
            "class": "bold padded",
            "image": "https://DinaDurykina.github.io/icons8-глобус-24.png"
          },
            {
              "type": "label",
              "text": "Other",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-глобус-24.png"
            },
            {
              "type": "label",
              "text": "Other",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-глобус-24.png"
            },
            {
              "type": "label",
              "text": "Other",
              "class": "bold padded",
              "image": "https://DinaDurykina.github.io/icons8-глобус-24.png"
            }]
        },

        {

          "header": {
            "type": "vertical",
            "style": {
              "background": "#ebebeb"
            },
            "components": [
              {
                "type": "label",
                "class": "normal",
                "text": "Select one or more Platforms and click"
              },
              {
                "type": "label",
                "text": "NEXT",
                "class": "bold",
                "href": {
                  "url": "https://DinaDurykina.github.io/brazuka.json",
                  "transition": "modal"
                }
              }
            ]
          }

        }
      ]
    }
  }
}