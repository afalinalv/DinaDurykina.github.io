{
  "$jason": {
    "head": {
      "title": "BRAZUKA",
      "actions": {
        "$load":    { "type": "$render" },
        "navigate": {"type": "$default" }
      },
      "templates": {
        "body": {
          "header": {
            "title": {
              "type": "image",
              "style": {
                "align": "left",
                "left": "20",
                "width": "12",
                "height": "12"
              },
              "url": "https://DinaDurykina.github.io/squared-menu.png"},
            "style": {
              "background": "#A9A9A9"
            },
            "menu": {
              "text": "Choose",
              "style": {
                "color": "#0000ff",
                "font": "HelveticaNeue-Bold",
                "size": "12"
              },
              "action": {
                "type": "$util.toast",
                "options": {
                  "text": "Good job!"
                }
              }
            }
          },
          "background": {
            "type": "html",
            "url": "http://www.brazuka.ru/",
            "action": { "trigger": "navigate" }
          },
          /*floating button on top of the site page*/
          "layers": [
            {
              "type": "image",
              "url": "https://DinaDurykina.github.io/ringer-volume.png",
              "style": {
                "bottom": "90",
                "right": "20",
                "background": "#ff0000",
                "color": "#ffffff",
                "width": "80",
                "height": "80",
                "align": "center",
                /*"size": "30",*/
                "corner_radius": "50"
              },
              "action": {
                "type": "$back"
              }
            }
          ],

          "footer": {
            "tabs": {
              "style": {
                "background": "#A9A9A9"	},
              "items": [{
                "image": "https://DinaDurykina.github.io/icons8-shopping-bag-24.png",
                "text": "Cart",
                "style": {
                  "height": "12"
                },
                "url":"https://DinaDurykina.github.io/bagteh.json"
              }, {
                "image": "https://DinaDurykina.github.io/icons8-buy-24.png",
                "text": "Pay",
                "style": {
                  "height": "12"
                },
                "url":"https://DinaDurykina.github.io/buyteh.json"
              }, {
                "image": "https://DinaDurykina.github.io/icons8-truck-24.png",
                "text": "Delivery",
                "style": {
                  "height": "12"
                },
                "url":"https://DinaDurykina.github.io/truckteh.json"
              }]
            }
          }
        }
      }
    }
  }
}